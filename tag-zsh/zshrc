if (( $+commands[nvim] )); then
  alias vim="nvim"
fi
alias vi="vim"
alias brewu='brew update && brew upgrade'
alias rbbe='bundle exec'
alias rbbu='bundle update'
alias rbbi='bundle install'
alias ag='ag -C2 --pager="less -RFX"'

# Prettify ripgrep
function rg()
{
   command rg -pC2 "$@" | less -RFX
}

#
# User configuration sourced by interactive shells
#

# Change default zim location
export ZIM_HOME=${ZDOTDIR:-${HOME}}/.zim

# Start zim
[[ -s ${ZIM_HOME}/init.zsh ]] && source ${ZIM_HOME}/init.zsh

export PATH="/usr/local/sbin:$PATH" # homebrew
export PATH="/usr/local/opt/python/libexec/bin:$PATH" # homebrew python
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH" # homebrew coreutils
export EDITOR="vim"

# Load rbenv automatically by appending
# the following to ~/.zshrc:

if (( $+commands[rbenv] )); then
  eval "$(rbenv init -)"
fi
